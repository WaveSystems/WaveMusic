!!!
%html
  %head
    %title WaveMusic
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body

    - if user_signed_in?
      #user_information
        %p= "Hello! #{current_user.username}"
        %p= link_to "Sign out", :destroy_user_session, :method => 'delete'
    - else
      #user_information
        %p= link_to "Sign in", :new_user_session
        %p= link_to "Sign up", :new_user_registration

    = yield
